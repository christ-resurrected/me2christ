@import '_svg.styl'

*
  box-sizing  border-box

body
  background  black
  margin      0

h1
  margin      0 0 10vmin 0

.content
  color       black
  width       75%
  margin      0 auto

.light
  opacity     1
  position    fixed
  top         0
  margin      0
  z-index     -1
  display     flex
  height      100%
  width       100%
  justify-content center
  align-items     center
  transform   scale(0, 0)

.verse
  color         white
  margin        10vmin auto
  padding       5vmin
  width         75%

  opacity       0
  transition    opacity 2s

  &.visible
    opacity       1
    transform     scale(1, 1)

  &.v3
    color       black

  .ref
    font-size   5vmin
    margin-top  5vmin
    text-align  right
  .text
    font-size   10vmin
    text-align  center
