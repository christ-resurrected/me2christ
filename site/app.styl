@import _modal

*
  box-sizing  border-box

body
  font-size   5vmin
  margin      0

.main
  color       black

  & > p:first-child:first-letter
    float       left
    font-size   12vmin
    line-height 10vmin
    padding     7px 5px 0 0
    text-shadow 2px 2px 6px #777

.root
  margin      10vmin auto 10vmin auto
  width       75%

.light
  margin      0
  position    fixed
  top         0
  height      100%
  width       100%
  transform   scale(0, 0)
  z-index     -1

  display         flex
  justify-content center
  align-items     center
