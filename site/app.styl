*
  box-sizing  border-box

body
  background  black
  color       white
  font-size   5vmin
  margin      0

iframe
  width 100%
  top 5px
  margin-bottom -5px
  height calc(100vw * 215/560)

p:first-child:first-letter
  float       left
  font-size   12vmin
  line-height 10vmin
  padding     7px 5px 0 0
  text-shadow 2px 2px 6px #777

em
  font-family   serif   // quoted verses

summary
  font-size   7vmin
  margin-top  5vmin

.main
  color       black

.intro
.main
.outro
  margin      10vmin auto 10vmin auto
  width       75%

.light
  margin      0
  position    fixed
  top         0
  height      100%
  width       100%
  transform   scale(0, 0)
  z-index     -1

  display         flex
  justify-content center
  align-items     center

.verse
  color         white
  text-align    center
  font-family   serif
  font-size     10vmin

  .red
    color       red

  .ref
    color       #aaa
    font-size   5vmin
    margin-top  5vmin
    text-align  right
