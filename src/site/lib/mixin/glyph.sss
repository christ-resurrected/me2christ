@define-mixin checkmark-filter
  filter: hue-rotate(00deg) brightness(72%) contrast(500%)

@define-mixin glyph $id
  background: url(resource/$id.svg)
  content: ''
  display: inline-block
  position: relative
  top: 2px
  height: 1rem
  width: 1rem

@define-mixin glyph-mr-2 $id
  @mixin glyph $id
  margin-right: 0.5rem
