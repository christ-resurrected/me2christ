body
  font-family: Arial, Verdana, Geneva, Tahoma, sans-serif
  hyphens: auto  // fix large gaps between words
  line-height: 1.4
  margin: 0
  text-align: justify
  text-justify: inter-word

h1
  font-size: 2.5rem
  margin: 0

h2,
h3
  margin: 0 0 1rem 0

h1,
h2,
h3
  hyphens: none
  text-align: center

header,
footer
  background: #333
  color: #aaa
  padding: 1rem
  text-align: center

section
  margin: 0.5rem

span+span:before
  content: ' '
