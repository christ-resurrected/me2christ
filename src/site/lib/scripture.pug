append head
  style: include:scss scripture.scss

mixin see(refs, label='See')
  - if (!refs) return
  - refs = refs.replace('Mat.', 'Matthew')
  - refs = refs.replace('Rev.', 'Revelation')
  - var refarr = refs.split(';')
  span.see  (
  span= label
  each ref in refarr
    | 
    mark= ref
  span )

mixin seeAlso(refs)
  +see(refs, 'See also')

mixin verse(ref)
  - ref = ref.replace('Mat.', 'Matthew')
  - ref = ref.replace('Rev.', 'Revelation')
  .verse
    span.pre= attributes.pre
    span.body
      block
    span  &ndash;
    mark= ref
    +seeAlso(attributes.seeAlso)
