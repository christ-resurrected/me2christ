doctype html

include nav.pug
include running.pug
include scripture.pug

mixin favicon
  link(rel='icon' href='favicon.ico' sizes='32x32')
  link(rel='icon' href='asset/favicon/favicon.svg' type='image/svg+xml')
  // google, chrome
  link(rel='icon' href='asset/favicon/android-chrome-48x48.png' sizes='48x48')
  link(rel='icon' href='asset/favicon/android-chrome-192x192.png' sizes='192x192')
  // iPad, iPhone
  link(rel='apple-touch-icon' sizes='167x167' href='asset/favicon/apple-touch-icon-180x180.png')
  link(rel='apple-touch-icon' sizes='180x180' href='asset/favicon/apple-touch-icon-180x180.png')

html(lang='en')
  head
    block head
      +favicon
      title me2christ.com - REPENT, FOR THE KINGDOM OF HEAVEN IS AT HAND!
      meta(charset='UTF-8')
      meta(name='description' content='The Gospel of our Lord Jesus Christ')
      meta(name='version' content=process.env.npm_package_version)
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      if process.env.M2C_LIVE_RELOAD
        script: include livereload.js
      style: include:svg:postcss base.sss
  // FIX: ipad tooltips -- see https://dev.webonomic.nl/fixing-the-iphone-css-hover-problem-on-ios
  body(onclick)
    block header
    section
      block main
    block footer
