style: include:sss ministry.tract.sss

mixin img(basename, alt_text, factor)
  - const root = 'asset/tract/ministry'
  - const href_raw = `${root}/raw/${basename}.png`
  - const href_thumb = `${root}/thumb/${basename}.png`
  - const vw_size = 25 * factor // percentile width in viewport
  - const w_thumb = 630 * factor // physical pixel width of thumbnail (= logical px width * device-pixel-ratio)
  a(href=href_raw): img(
    alt=alt_text
    class=attributes.class
    src=href_raw
    srcset=`${href_thumb} ${w_thumb}w, ${href_raw} ${w_thumb * 2}w`
    sizes=`(max-width: 550px) ${vw_size * 2}vw, ${vw_size}vw`
  )

mixin img-a6(id, alt_text)
  +img(`A6_2s-${id}`, alt_text, 1).a6

mixin img-trifold(id, alt_text)
  +img(`pocket_trifold-${id}`, alt_text, 2).trifold

.card.w-full
