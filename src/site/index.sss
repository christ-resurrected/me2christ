@import 'mixin/glyph.sss'
@import 'mixin/tooltip.sss'

em
  font-weight: bold

.check::before
  @mixin glyph emoji/checkmark_box
  @mixin checkmark-filter

.dark .verse strong
  background-clip: text
  background-image: linear-gradient(to top, #f00, #ff0)
  color: transparent
  text-shadow: 1px 1px 0 #ffc

.light em
  color: #080

.verse
  @mixin tooltip-anchor
