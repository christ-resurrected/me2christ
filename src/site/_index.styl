body
  background  #000
  color       #fff

.jesus
  color       #f00
.jesus:after
  content     '\201d'
.jesus:before
  content     '\201c'

iframe
  height        calc(100vw * 215/560)
  margin-bottom -5px
  top           5px
  width         100%

.light
  height      100%
  margin      0
  position    fixed
  top         0
  transform   scale(0, 0)
  width       100%
  z-index     -1

.light
  align-items     center
  display         flex
  justify-content center

.main
  *
    color       #000

  blockquote
    background: #ddd;
    border-left: 10px solid #888;
    p
      color red

.outro
  margin-bottom 10vmin

.intro
.outro
  padding       0 2vmin

  .judgement-verses
    em
      color #aaa
    em:before
      content: '\2014\00a0'  // long dash then non breaking space
    p
      color red

  .verse
    font-size     6vmin
    margin-bottom 10vmin
    text-align    left

  .ref
    color       #aaa
    font-size   4vmin
    margin-top  10vmin
    text-align  center
