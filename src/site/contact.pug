extends lib/base.pug

append head
  style: include contact.css
  script(src='https://challenges.cloudflare.com/turnstile/v0/api.js' async defer)

append main
  .card
    h1 Contact Me
    .contact
      form(method='POST' action='https://me2christ-worker.dizzib-dev.workers.dev')
        label(for='name') Name
        input(id='name' maxlength=20 minlength=2 placeholder=`Your name` required)

        label(for='email') Email
        input(id='email' placeholder=`Your email address` required type='email')

        label(for='message') Message
        textarea(cols=40 id='message' maxlength=1000 minlength=40 placeholder=`Your message` required rows=10)

        div(data-sitekey=process.env.TURNSTILE_SITE_KEY data-theme='light' data-size='flexible').cf-turnstile.mt-8
        button(type='submit').mt-8 Send
