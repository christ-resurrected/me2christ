extends lib/base.pug

append head
  style: include contact.css
  script(src='https://challenges.cloudflare.com/turnstile/v0/api.js' async defer)

mixin input(id, label, type, desc)
  div
    label(for=id) #{label}
    input(id=id name=id placeholder=`Your ${desc}` type=type)

mixin textarea(id, label)
  div
    label(for=id) #{label}
    textarea(id=id name=id placeholder=`Your message` cols=40 rows=10)

append main
  .card
    h1 Contact Me
    .contact
      form(method='POST' action='https://me2christ-worker.dizzib-dev.workers.dev')
        +input('name', 'Name', 'text', 'name')
        +input('email', 'Email', 'email', 'email address')
        +textarea('message', 'Message')

        div(data-sitekey=process.env.TURNSTILE_SITE_KEY data-theme='light' data-size='flexible').cf-turnstile
        button(type='submit').mt-8 Send
