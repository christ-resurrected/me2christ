#!/bin/sh

mkdir -p build \
  && cd build \
  && rm -rf ./* 2> /dev/null \
  && yarn add livescript \
  && LSC='./node_modules/.bin/lsc --debug' \
  && $LSC -o . -c ../src/*.ls \
  && $LSC -o ./task -c ../src/task/*.ls \
  && $LSC -o ./task/yarn -c ../src/task/yarn/*.ls \
  && yarn \
  && yarn run build
